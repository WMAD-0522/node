<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>
<%- include('../partials/header') %>

<body>

    <div class="container">
        <div class="section section-department">
            <h3>Departments</h3>
            <div class="departments">
                <% for( let index = 0; index < departments.length; index++ ) { %>
                    <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
                      <div class="card-header"><%= departments[index].name  %></div>
                      <div class="card-body">
                        <p class="card-text"><%= departments[index].description %></p>
                      </div>
                    </div>
              <% } %>
            </div>

            <h3>Create Departments</h3>
            <form action="/api/department" method="POST">
                <div class="form-group">
                    <label for="formGroupExampleInput">Name</label>
                    <input type="text" name="name" class="form-control" id="formGroupExampleInput" placeholder="Example input">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">Description</label>
                    <input type="text" name="description" class="form-control" id="formGroupExampleInput2" placeholder="Another input">
                </div>
                <button type="submit" class="btn btn-dark">Submit</button>
            </form>
        </div>
    </div>



</body>

<%- include('../partials/footer') %>
</html>