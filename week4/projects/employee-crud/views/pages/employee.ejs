<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
    <%- include('../partials/header') %>
    <body>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">EmployeeCRUD - Employee</h1>
                <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
            
                <h3>Employee</h3>
                <div class="employee section">
                    
                    <% for( let index = 0; index < employees.length; index++ ) { %>
                        <div class="card" style="width: 18rem;">
                            <!-- <img src="..." class="card-img-top" alt="..."> -->
                            <div class="card-body">
                              <h5 class="card-title"><%= employees[index].fullName  %></h5>
                              <p class="card-text">Email: <%= employees[index].email  %></p>
                              <p class="card-text">Salary: <%= employees[index].salary  %></p>
                              <p class="card-text">Over Time: <%= employees[index].overTime  %></p>
                              <a href="#" class="btn btn-dark">Go to Profile</a>
                            </div>
                          </div>
                    <% } %>
                </div>

                <h3>Create Employee</h3>

                <form action="/api/employee/" method="POST">
                    <div class="form-group">
                      <label for="formGroupExampleInput">Full Name</label>
                      <input type="text" name="fullName" class="form-control" id="formGroupExampleInput" placeholder="Example input">
                    </div>
                    <div class="form-group mt-2">
                      <label for="formGroupExampleInput2">Email</label>
                      <input type="text" name="email" class="form-control" id="formGroupExampleInput2" placeholder="Another input">
                    </div>

                    <div class="form-group mt-2">
                        <label for="formGroupExampleInput2">Salary</label>
                        <input type="text" name="salary" class="form-control" id="formGroupExampleInput2" placeholder="Another input">
                    </div>

                    <div class="btn-group-toggle mt-3" data-toggle="buttons">
                        <label class="btn btn-secondary active">
                          <input type="checkbox" name="overTime" checked autocomplete="off"> Over Time
                        </label>
                    </div>

                    <div class="form-group mt-3">
                        <label for="departmentId">Select Department</label>
                        <select name="departmentId" class="form-select " aria-label="Select Department">
                            <% for( let index = 0; index < departments.length; index++ ) { %>
                                <option value="<%= departments[index].id  %>"><%= departments[index].name  %></option>
                            <% } %>
                        </select>
                    </div>

                    <!-- <div class="form-group mt-2">
                        <label for="formGroupExampleInput2">Over Time</label>
                        <input type="checkbox" name="overTime" checked autocomplete="off">Over Time
                    </div> -->

                    <button class="btn btn-dark mt-3">Create</button>
                </form>
            </div>
        </div>
    </body>
    <%- include('../partials/footer') %>
</html>